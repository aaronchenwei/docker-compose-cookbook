##########################################
# Common Settings
#
# Options specific to IntelliJ are prefixed with `ij_`
#
##########################################

# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
indent_style = space

##########################################
# File Extension Settings
##########################################

# JAVA, Groovy, Kotlin Files
[*.{java,groovy,kt,kts}]
indent_size = 2

# Gradle
[*.gradle]
ij_continuation_indent_size = 2
indent_size = 2
max_line_length = 150

# Web Files
[*.{htm,html,js,jsm,ts,tsx,cjs,cts,ctsx,mjs,mts,mtsx,css,sass,scss,less,pcss,svg,vue}]
indent_size = 2

# JSON Files
[*.{json,json5,webmanifest}]
indent_size = 2

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# XML Configuration Files
[*.xml]
indent_size = 2

# Markdown Files
[*.{md,mdx}]
indent_size = 2
trim_trailing_whitespace = false

# Makefiles
[Makefile*]
indent_size = 4
indent_style = tab

# Python
[*.py]
indent_size = 4
indent_style = space

# Go Files
[{go.mod,go.sum,*.go}]
indent_size = 4
indent_style = tab

# Git Files
[{.gitattributes,.gitignore,.gitmodules}]
indent_size = 4
indent_style = tab

# Dockerfile
[Dockerfile*]
indent_size = 4
